#! /bin/bash

cmd="--build"
if [[ "${#}" -eq "1" ]]; then
    if [[ "${1}" == --* ]]; then
        cmd=$1
    fi
fi

case "${cmd}" in
    --build|--package)
        make html || exit 1
        mkdir -p ../build/docs
        cp -rf _build/html ../build/docs
        ;;
    --clean)
        make clean
        rm -rf ../build/docs
        rm -rf _build
        ;;
    --help)
        "Usage: ${0} [--build|--clean]"
        ;;
esac