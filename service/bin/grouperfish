#!/bin/bash

# Startup a grouperfish instance.
# Internally, this starts a bagheera service, but uses custom JAX-RS resources.

function usage() {
  echo "Usage: $0 [server-port] [hazelcast-config-path]"
  exit 1
}

# Set defaults:
#   port = FISH = 0xF124 = 61732
SERVER_PORT=61732
#   config is fixed for grouperfish
bin=`dirname "$0"`
bin=`cd "$bin"; pwd`
HAZELCAST_CONF=$bin/../conf/hazelcast.xml

# Print usage if incorrect number of args
[[ $# -gt 2 ]] && usage

# User override:
if [[ $# -gt 0 ]]; then
    SERVER_PORT=$1
    if [[ $# -gt 1 ]]; then
        HAZELCAST_CONF=$bin/../conf/hazelcast.xml
    fi
fi



SERVER_CLASS_NAME="com.mozilla.grouperfish.bootstrap.Grouperfish"
JAVA_OPTS="-Xmx1000m -XX:+UseParNewGC -XX:+UseConcMarkSweepGC"

if [ "$GROUPERFISH_USER" = "" ]; then
    GROUPERFISH_USER="$USER"
fi

if [ "$HADOOP_CONF" = "" ]; then
    HADOOP_CONF="/etc/hadoop/conf"
fi

if [ "$HBASE_CONF" = "" ]; then
    HBASE_CONF="/etc/hbase/conf"
fi

if [ -d "/var/run/grouperfish" ]; then
    PIDFILE="/var/run/grouperfish/grouperfish.pid"
else
    PIDFILE="$bin/../grouperfish.pid"
fi

if [ -d $bin/../target ]; then
    # development: use the main jar in the build directory and run in foreground
    MAIN_JAR_PATH="$bin/../target/grouperfish-*.jar"
    if [ "$DAEMON_DETACHED" = "" ]; then
        DAEMON_DETACHED=false
    fi
else
    # distribution: use dist jar, and go to background
    MAIN_JAR_PATH="$bin/../grouperfish-*.jar"
    if [ "$DAEMON_DETACHED" = "" ]; then
        DAEMON_DETACHED=true
    fi
fi

CLASSPATH="$bin/../conf":"$HADOOP_CONF":"$HBASE_CONF"
# add main jar
for lib in `ls $MAIN_JAR_PATH`; do
    CLASSPATH=${CLASSPATH}:$lib
done

# create logs dir if it doesn't exist
if [ ! -d $bin/../logs ]; then
    mkdir -p $bin/../logs
fi

BAGHEERA_OPTS="-Dhazelcast.config=${HAZELCAST_CONF} -Dgrouperfish.rest.port=${SERVER_PORT} -Dbagheera.log.dir=${bin}/../logs"

echo "Using classpath: " $CLASSPATH

if [ "$DAEMON_DETACHED" = false ]; then
    java $BAGHEERA_OPTS $JAVA_OPTS -cp $CLASSPATH $SERVER_CLASS_NAME
    RETVAL=$?
else
    nohup java $BAGHEERA_OPTS $JAVA_OPTS -cp $CLASSPATH $SERVER_CLASS_NAME > $bin/../logs/grouperfish.out 2>&1 < /dev/null &
    PID=$!
    RETVAL=$?

    echo $PID > $PIDFILE
fi

exit $RETVAL
